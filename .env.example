# Supabase Configuration
# Get these values from your Supabase project settings
# https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Services Configuration
# Used by ChatBot component for customer support
GEMINI_API_KEY=your_gemini_api_key
VITE_GEMINI_API_KEY=your_gemini_api_key
OPENROUTER_API_KEY=your_openrouter_api_key
AI_PROVIDER=openrouter

# Product Management Feature Flag
# Set to 'true' to enable Supabase backend for product management
# Set to 'false' to use static products.js file (default)
VITE_USE_SUPABASE=false

# Backend URL (para chatbot y servicios externos)
# Development: usar servidor Express local (http://localhost:3001)
# Production (Vercel): NO configurar (usar√° rutas relativas /api/*)
VITE_BACKEND_URL=http://localhost:3001

# ePayco Payment Gateway Configuration
# Get these values from https://dashboard.epayco.co
VITE_EPAYCO_PUBLIC_KEY=your_epayco_public_key
VITE_EPAYCO_PRIVATE_KEY=your_epayco_private_key
VITE_EPAYCO_P_CUST_ID=your_epayco_customer_id
VITE_EPAYCO_P_KEY=your_epayco_p_key
VITE_EPAYCO_TEST=true

# Resend Email Service Configuration
# Get your API key from https://resend.com/api-keys
# Free tier: 100 emails/day, 3,000 emails/month
VITE_RESEND_API_KEY=your_resend_api_key
